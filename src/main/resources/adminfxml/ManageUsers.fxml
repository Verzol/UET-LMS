<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="970.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adminController.ManageUsersController">
    <children>
        <Label layoutX="50.0" layoutY="25.0" text="Manage Users">
            <font>
                <Font name="Segoe UI Bold" size="24.0" />
            </font>
        </Label>

        <TableView fx:id="tableUsers" layoutX="50.0" layoutY="70.0" prefHeight="452.0" prefWidth="870.0" styleClass="column-header" stylesheets="@../styles/styles.css">
            <columns>
                <TableColumn fx:id="columnUserId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="columnUsername" prefWidth="150.0" text="Username" />
                <TableColumn fx:id="columnFirstName" prefWidth="150.0" text="First Name" />
                <TableColumn fx:id="columnLastName" prefWidth="150.0" text="Last Name" />
                <TableColumn fx:id="columnEmail" prefWidth="200.0" text="Email" />
                <TableColumn fx:id="columnPhone" prefWidth="150.0" text="Phone" />
            </columns>
        </TableView>
      <HBox layoutX="215.0" layoutY="573.0" prefHeight="29.0" prefWidth="541.0">
         <children>
      
              <Button fx:id="addUserButton" mnemonicParsing="false" onAction="#handleAddUser" prefHeight="40.0" prefWidth="120.0" text="Add User">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
              <Button fx:id="editUserButton" mnemonicParsing="false" onAction="#handleEditUser" prefHeight="40.0" prefWidth="120.0" text="Edit User">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
              <Button fx:id="deleteUserButton" mnemonicParsing="false" onAction="#handleDeleteUser" prefHeight="40.0" prefWidth="120.0" text="Delete User">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
              <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh" prefHeight="40.0" prefWidth="120.0" text="Refresh">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
    </children>
</AnchorPane>
