<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="823.0" prefWidth="528.0" style="-fx-background-color: #EAEAEA; -fx-background-radius: 15; -fx-border-radius: 15;" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adminController.AddDocumentController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="43.0" layoutY="31.0" prefHeight="762.0" prefWidth="442.0" spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Add New Document">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>

            <VBox spacing="10">
                <Label style="-fx-font-size: 14px;" text="Document Type:" />
                <ComboBox fx:id="itemTypeComboBox" onAction="#updateFieldsForType" prefHeight="31.0" prefWidth="403.0" promptText="Select Document Type" style="-fx-background-radius: 6;" />
            </VBox>

            <VBox spacing="10">
                <Label style="-fx-font-size: 14px;" text="ID:" />
                <TextField fx:id="idTextField" promptText="Enter ID" style="-fx-background-radius: 6;" />
                <Label style="-fx-font-size: 14px;" text="Title:" />
                <TextField fx:id="titleTextField" promptText="Enter title" style="-fx-background-radius: 6;" />
                <Label style="-fx-font-size: 14px;" text="Author:" />
                <TextField fx:id="authorTextField" promptText="Enter author" style="-fx-background-radius: 6;" />
            </VBox>

            <VBox fx:id="bookFields" managed="false" spacing="10" visible="false">
                <Label fx:id="editionLabel" style="-fx-font-size: 14px;" text="Edition:" />
                <TextField fx:id="editionTextField" promptText="Enter edition" style="-fx-background-radius: 6;" />
                <Label fx:id="quantityInStockLabel" style="-fx-font-size: 14px;" text="Quantity in Stock:" />
                <TextField fx:id="quantityInStockTextField" promptText="Enter quantity in stock" style="-fx-background-radius: 6;" />
                <Label fx:id="genreLabel" style="-fx-font-size: 14px;" text="Genre:" />
                <TextField fx:id="genreTextField" promptText="Enter genre" style="-fx-background-radius: 6;" />
                <Label fx:id="pageCountLabel" style="-fx-font-size: 14px;" text="Page Count:" />
                <TextField fx:id="pageCountTextField" promptText="Enter page count" style="-fx-background-radius: 6;" />
                <Label style="-fx-font-size: 14px;" text="Image URL:" />
                <TextField fx:id="imageUrlTextFieldBook" promptText="Enter image URL" style="-fx-background-radius: 6;" />
            </VBox>

            <VBox fx:id="magazineFields" managed="false" spacing="10" visible="false">
                <Label fx:id="publishNumberLabelMagazine" style="-fx-font-size: 14px;" text="Publish Number:" />
                <TextField fx:id="publishNumberTextFieldMagazine" promptText="Enter publish number" style="-fx-background-radius: 6;" />
                <Label fx:id="monthLabel" style="-fx-font-size: 14px;" text="Month:" />
                <TextField fx:id="monthTextField" promptText="Enter month" style="-fx-background-radius: 6;" />
                <Label style="-fx-font-size: 14px;" text="Image URL:" />
                <TextField fx:id="imageUrlTextFieldMagazine" promptText="Enter image URL" style="-fx-background-radius: 6;" />
            </VBox>

            <VBox fx:id="thesisFields" managed="false" spacing="10" visible="false">
                <Label fx:id="universityLabel" style="-fx-font-size: 14px;" text="University:" />
                <TextField fx:id="universityTextField" promptText="Enter university" style="-fx-background-radius: 6;" />
                <Label fx:id="supervisorLabel" style="-fx-font-size: 14px;" text="Supervisor:" />
                <TextField fx:id="supervisorTextField" promptText="Enter supervisor" style="-fx-background-radius: 6;" />
                <Label fx:id="fieldLabel" style="-fx-font-size: 14px;" text="Field:" />
                <TextField fx:id="fieldTextField" promptText="Enter field" style="-fx-background-radius: 6;" />
            </VBox>

            <VBox fx:id="journalFields" managed="false" spacing="10" visible="false">
                <Label fx:id="volumeLabel" style="-fx-font-size: 14px;" text="Volume:" />
                <TextField fx:id="volumeTextField" promptText="Enter volume" style="-fx-background-radius: 6;" />
                <Label fx:id="publishNumberLabelJournal" style="-fx-font-size: 14px;" text="Publish Number:" />
                <TextField fx:id="publishNumberTextFieldJournal" promptText="Enter publish number" style="-fx-background-radius: 6;" />
                <Label style="-fx-font-size: 14px;" text="Image URL:" />
                <TextField fx:id="imageUrlTextFieldJournal" promptText="Enter image URL" style="-fx-background-radius: 6;" />
            </VBox>

            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="cancelButton" onAction="#cancelAddDocument" prefHeight="35.0" prefWidth="80.0" styleClass="cancel-button" text="Cancel" />
                <Button fx:id="saveButton" onAction="#saveItem" prefHeight="35.0" prefWidth="80.0" styleClass="save-button" text="Save" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
