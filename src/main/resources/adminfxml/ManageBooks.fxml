<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="manageBooksPane" prefHeight="670.0" prefWidth="980.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adminController.ManageDocumentController">
   <children>
      <TableView fx:id="itemTableView" layoutX="20.0" layoutY="82.0" prefHeight="496.0" prefWidth="940" styleClass="colored-table" stylesheets="@../styles/styles.css">
         <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" style="-fx-background-color: transparent;" text="ID" />
            <TableColumn fx:id="isbnColumn" prefWidth="130" style="-fx-background-color: transparent;" text="ISBN" />
            <TableColumn fx:id="titleColumn" prefWidth="180" style="-fx-background-color: transparent;" text="Title" />
            <TableColumn fx:id="authorColumn" prefWidth="150" style="-fx-background-color: transparent;" text="Author" />
            <TableColumn fx:id="editionColumn" prefWidth="80" style="-fx-background-color: -transparent;" text="Edition" />
            <TableColumn fx:id="quantityInStockColumn" prefWidth="150" style="-fx-background-color: transparent;" text="Quantity In Stock" />
            <TableColumn fx:id="genreColumn" prefWidth="116" style="-fx-background-color: transparent;" text="Genre" />
            <TableColumn fx:id="pageCountColumn" prefWidth="101" style="-fx-background-color: transparent;" text="Page Count" />
            <TableColumn fx:id="imageUrlColumn" prefWidth="150" style="-fx-background-color: transparent;" text="Image URL" />
         </columns>
      </TableView>
      <HBox alignment="CENTER" layoutX="20.0" layoutY="607.0" prefWidth="940" spacing="15">
         <children>
            <Button fx:id="showDocumentDetails" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#showDocumentDetails" prefWidth="120.0" styleClass="save-button" text="Details" />
            <Button fx:id="addDocumentButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#addDocument" prefWidth="120.0" styleClass="save-button" text="Add" />
            <Button fx:id="updateDocumentButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#updateDocument" prefWidth="120.0" styleClass="save-button" text="Update" />
            <Button fx:id="deleteDocumentButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#deleteDocument" prefWidth="120.0" styleClass="cancel-button" text="Delete" />
            <Button fx:id="refreshButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#refreshTable" prefWidth="120.0" styleClass="close-button" stylesheets="@../styles/styles.css" text="Reload" />
         </children>
      </HBox>
      <HBox layoutX="20.0" layoutY="14.0" prefHeight="50.0" prefWidth="940.0" spacing="20" style="-fx-background-color: #5652AB; -fx-padding: 10; -fx-background-radius: 10;">
         <children>
            <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Manage Document" />
            <HBox alignment="CENTER" prefHeight="35.0" prefWidth="216.0" spacing="10.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="66.0" text="Select Item:" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="itemSelectorComboBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="126.0" styleClass="textFiled" />
               </children>
            </HBox>
            <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="32.0" prefWidth="302.0" spacing="10" styleClass="textFiled">
               <children>
                  <TextField fx:id="searchBar" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="30.0" prefWidth="270.0" promptText="Want to find document?" styleClass="transparent" />
                  <Button fx:id="searchButton" onAction="#searchAndDisplay" prefHeight="34.0" prefWidth="32.0" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="26.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../image/icons8-search-32.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
