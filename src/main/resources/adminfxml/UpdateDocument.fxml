        <TextField fx:id="authorTextField" layoutX="150.0" layoutY="96.0" prefWidth="300.0" />

        <Label fx:id="additionalField1Label" layoutX="20.0" layoutY="140.0" text="Field 1:" visible="false" />
        <TextField fx:id="additionalField1" layoutX="150.0" layoutY="136.0" prefWidth="300.0" visible="false" />

        <Label fx:id="additionalField2Label" layoutX="20.0" layoutY="180.0" text="Field 2:" visible="false" />
