              <Button fx:id="cancelButton" onAction="#cancelUpdate" prefWidth="100.0" styleClass="cancel-button" stylesheets="@../styles/styles.css" text="Cancel">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
      
              <Button fx:id="saveButton" onAction="#saveChanges" prefWidth="100.0" styleClass="save-button" stylesheets="@../styles/styles.css" text="Save" />
         </children>
      </HBox>
    </children>
</AnchorPane>
