        <Button fx:id="detailButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="65.0" stylesheets="@../styles/styles.css" text="Detail" onAction="#handleDetailButtonAction">
            <font>
                <Font name="Nunito Black" size="12.0" />
            </font>
        </Button>
    </children>
</VBox>
