            <xAxis>
                <CategoryAxis side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" />
            </yAxis>
        </BarChart>
        <ListView fx:id="topBooksList" layoutX="609.0" layoutY="270.0" prefHeight="358.0" prefWidth="301.0" />
        <Label layoutX="609.0" layoutY="243.0" prefHeight="21.0" prefWidth="104.0" text="Top Books">
            <font>
                <Font name="Segoe UI Bold" size="20.0" />
            </font>
        </Label>
            </left>
        </BorderPane>
    </children>
