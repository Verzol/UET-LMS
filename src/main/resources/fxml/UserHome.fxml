        <Label layoutX="59.0" layoutY="22.0" prefHeight="52.0" prefWidth="355.0" text="Dashboard">
            <font>
                <Font name="System Bold" size="25.0" />
            </font>
        </Label>

        <HBox layoutX="59.0" layoutY="82.0" prefHeight="121.0" prefWidth="852.0" spacing="10.0">
            <children>
                <VBox prefHeight="127.0" prefWidth="205.0" style="-fx-background-color: #38AFFF;" styleClass="card" stylesheets="@../styles/styles.css">
                    <children>
                        <HBox alignment="CENTER_RIGHT" prefHeight="48.0" prefWidth="205.0">
                            <children>
                                <Label prefHeight="25.0" prefWidth="132.0" text="Total Users">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                                <Pane prefHeight="48.0" prefWidth="27.0" />
                                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/icons8-user-32.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </HBox>
                        <Label prefHeight="57.0" prefWidth="77.0" text="30">
                <Button fx:id="searchButton"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-pref-width: 100; -fx-pref-height: 30; -fx-border-radius: 5px; -fx-background-radius: 5px;"
