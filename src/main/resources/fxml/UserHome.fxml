            <center>
                <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="590.0" prefWidth="786.0" BorderPane.alignment="CENTER">
                    <content>
                        <GridPane fx:id="bookContainer" hgap="10.0" style="-fx-padding: 10;" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
                            </columnConstraints>
                        </GridPane>
                    </content>
                </ScrollPane>
            </center>
            <left>
                <VBox prefHeight="590.0" prefWidth="173.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label alignment="CENTER" prefHeight="43.0" prefWidth="179.0" style="-fx-background-color: #3612cb;" text="Top books" textFill="WHITE">
                            <font>
                                <Font name="Nunito Bold" size="14.0" />
                            </font>
                        </Label>
                        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="548.0" prefWidth="173.0">
                            <content>
                                <GridPane fx:id="topBooksContainer" hgap="10.0" style="-fx-padding: 10;" vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
