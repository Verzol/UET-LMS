    <children>

        <VBox prefHeight="90.0" prefWidth="980.0" style="-fx-background-color: #EAEAEA;">
           <Label alignment="CENTER" prefHeight="76.0" prefWidth="202.0" text="Dashboard">
               <font>
                   <Font name="System Bold" size="25.0" />
