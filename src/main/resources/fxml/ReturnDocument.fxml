<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="670.0" prefWidth="980.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReturnBooksController">
    <children>
        <Label layoutX="30.0" layoutY="22.0" text="Return Document">
            <font>
                <Font name="Segoe UI Bold" size="24" />
            </font>
        </Label>

        <TableView fx:id="tableBorrowedBooks" layoutX="30.0" layoutY="75.0" prefHeight="520.0" prefWidth="920.0" styleClass="colored-table">
            <columns>
                <TableColumn fx:id="columnBookId" prefWidth="100.0" style="-fx-background-color: transparent;" text="Book ID" />
                <TableColumn fx:id="columnTitle" prefWidth="250.0" style="-fx-background-color: transparent;" text="Title" />
                <TableColumn fx:id="columnAuthor" prefWidth="200.0" style="-fx-background-color: transparent;" text="Author" />
                <TableColumn fx:id="columnBorrowStatus" prefWidth="150.0" style="-fx-background-color: transparent;" text="Borrow Status" />
                <TableColumn fx:id="columnReportedByUserId" prefWidth="120.0" style="-fx-background-color: transparent;" text="Reported By" />
                <TableColumn fx:id="columnResolutionNotes" prefWidth="200.0" style="-fx-background-color: transparent;" text="Resolution Notes" />
            </columns>
        </TableView>

        <Button fx:id="buttonReturnBook" layoutX="180.0" layoutY="614.0" onAction="#handleReturnBook" prefHeight="30.0" prefWidth="150.0" styleClass="save-button" text="Return Book" />

        <Button fx:id="buttonReportError" layoutX="400.0" layoutY="614.0" onAction="#handleReportError" prefHeight="30.0" prefWidth="150.0" styleClass="cancel-button" text="Report Error" />

        <Button fx:id="buttonViewErrorDetails" layoutX="620.0" layoutY="614.0" onAction="#handleViewErrorDetails" prefHeight="30.0" prefWidth="150.0" styleClass="cancel-button" text="View Error Details" />
    </children>
</AnchorPane>
