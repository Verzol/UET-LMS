<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="service.UpdateProfileController">
    <children>
        <Label layoutX="50.0" layoutY="40.0" text="First Name" />
        <TextField fx:id="firstNameField" layoutX="150.0" layoutY="40.0" />

        <Label layoutX="50.0" layoutY="80.0" text="Last Name" />
        <TextField fx:id="lastNameField" layoutX="150.0" layoutY="80.0" />

        <Label layoutX="50.0" layoutY="120.0" text="Email" />
        <TextField fx:id="emailField" layoutX="150.0" layoutY="120.0" />

        <Label layoutX="50.0" layoutY="160.0" text="Phone" />
        <TextField fx:id="phoneField" layoutX="150.0" layoutY="160.0" />

        <Button layoutX="150.0" layoutY="200.0" onAction="#handleUpdateProfile" text="Update" textFill="#18004f" />
    </children>
</AnchorPane>
