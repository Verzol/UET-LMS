<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="485.0" styleClass="transparent" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="service.UpdateProfileController">
    <children>
        <Label alignment="CENTER" layoutX="-6.0" layoutY="-2.0" prefHeight="57.0" prefWidth="515.0" style="-fx-background-color: #5652AB;" styleClass="header-label" text="Update Profile" textFill="WHITE">
            <font>
                <Font name="Segoe UI Bold" size="22" />
            </font>
        </Label>

        <Button fx:id="closeScene" layoutX="459.0" layoutY="11.0" mnemonicParsing="false" onAction="#closeWindow" prefHeight="30.0" prefWidth="30.0" styleClass="close-button" stylesheets="@../styles/styles.css" text="X" />
        <TextField fx:id="firstNameField" layoutX="150.0" layoutY="100.0" prefHeight="35.0" prefWidth="211.0" promptText="Enter new first name" />
        <TextField fx:id="lastNameField" layoutX="150.0" layoutY="160.0" prefHeight="35.0" prefWidth="211.0" promptText="Enter new last name" />
        <TextField fx:id="emailField" layoutX="150.0" layoutY="220.0" prefHeight="35.0" prefWidth="211.0" promptText="Enter new email" />
        <TextField fx:id="phoneField" layoutX="150.0" layoutY="280.0" prefHeight="35.0" prefWidth="211.0" promptText="Enter new phone number" />

        <Button layoutX="185.0" layoutY="341.0" onAction="#handleUpdateProfile" prefHeight="25.0" prefWidth="134.0" style="-fx-background-color: green;" styleClass="selected-button" stylesheets="@../styles/styles.css" text="Update" textFill="WHITE" />
    </children>
</AnchorPane>
