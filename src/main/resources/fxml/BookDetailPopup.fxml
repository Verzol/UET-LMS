<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="450.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 10; -fx-padding: 20;" styleClass="transparent" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BookDetailPopupController">
    <children>
          <Label fx:id="bookTitleLabel" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Book Title" wrapText="true" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
               <ImageView fx:id="bookCoverImageView" fitHeight="250.0" fitWidth="200.0" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0); -fx-padding: 10;" />
            <VBox prefHeight="250.0" prefWidth="211.0">
               <children>
                       <Label fx:id="authorLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555555;" text="Author: ">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </Label>
                       <Label fx:id="genreLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555555;" text="Genre: ">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </Label>
                       <Label fx:id="pageCountLabel" style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Page Count: ">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                       <Label fx:id="isbnLabel" style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="ISBN: ">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </Label>
                       <Label fx:id="quantityInStockLabel" style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="In Stock: ">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </Label>
                       <Label fx:id="borrowedQuantityLabel" style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Borrowed: ">
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
         <VBox spacing="15.0" style="-fx-pref-width: 200px;">
             <VBox spacing="10.0" />
             <VBox spacing="10.0" />
             <VBox spacing="10.0" style="-fx-pref-width: 200px;">
                 <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555555;" text="Description:" />
                 <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="150.0" prefWidth="400.0" style="-fx-background-color: #f9f9f9; -fx-border-color: #dddddd; -fx-border-radius: 5; -fx-padding: 5;">
                     <content>
                         <Label fx:id="descriptionLabel" prefHeight="40.0" prefWidth="396.0" style="-fx-font-size: 14px; -fx-text-fill: #444444;" text="This is the description of the book. It will provide a detailed summary or other relevant information about the book." wrapText="true" />
                     </content>
                 </ScrollPane>
             </VBox>
             <Button fx:id="closeButton" onAction="#closePopup" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px; -fx-font-size: 14px; -fx-border-radius: 5;" text="Close" />
         </VBox>
    </children>
</VBox>
