<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="700.0" prefWidth="500.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 10; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BookDetailPopupController">
    <children>
        <Label fx:id="bookTitleLabel" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Book Title" wrapText="true" />
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <ImageView fx:id="bookCoverImageView" fitHeight="250.0" fitWidth="200.0" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0); -fx-padding: 10;" />
                <VBox prefHeight="250.0" prefWidth="211.0">
                    <children>
                        <Label fx:id="authorLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555555;" text="Author: ">
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="genreLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555555;" text="Genre: ">
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="pageCountLabel" style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Page Count: ">
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="isbnLabel" style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="ISBN: ">
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="quantityInStockLabel" style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="In Stock: ">
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="borrowedQuantityLabel" style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Borrowed: ">
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>
        <VBox spacing="15.0" style="-fx-pref-width: 200px;">
            <VBox spacing="10.0">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555555;" text="Description:" />
                <ScrollPane fitToWidth="true" fitToHeight="true" prefHeight="400.0" prefWidth="450.0" style="-fx-background-color: #f9f9f9; -fx-border-color: #dddddd; -fx-border-radius: 5; -fx-padding: 5;">
                    <content>
                        <TextArea fx:id="descriptionTextArea" wrapText="true" editable="false" prefHeight="380.0" prefWidth="430.0" style="-fx-font-size: 14px;" />
                    </content>
                </ScrollPane>
            </VBox>
            <Button fx:id="closeButton" onAction="#closePopup" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px; -fx-font-size: 14px; -fx-border-radius: 5;" text="Close" />
        </VBox>
    </children>
</VBox>
