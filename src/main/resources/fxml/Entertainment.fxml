<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane fx:id="entertainmentStage" prefHeight="441.0" prefWidth="626.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EntertainmentController">

    <ImageView fitHeight="441.0" fitWidth="626.0" pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="@../image/bg.jpg" />
        </image>
    </ImageView>

    <stylesheets>
        <URL value="@../styles/styles.css" />
    </stylesheets>

    <children>

        <Label layoutX="220.0" layoutY="50.0" text="Entertainment" textFill="#0b0b1d">
            <font>
                <Font name="Segoe UI Bold" size="32.0" />
            </font>
            <effect>
                <DropShadow color="GRAY" radius="10" />
            </effect>
        </Label>


        <VBox alignment="CENTER" layoutX="220.0" layoutY="150.0" spacing="20.0">
            <Button onAction="#entertainment" prefWidth="200.0" styleClass="custom-button" text="Game Center" />
        </VBox>
    </children>
</AnchorPane>
