<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ChatBotController" style="-fx-background-color: white;">


    <children>
        <TextArea fx:id="chatDisplay"
                  editable="false"
                  wrapText="true"
                  prefHeight="430.0"
                  prefWidth="600.0"
                  style="-fx-background-color: #87CEEB !important; -fx-background-size: cover; -fx-background-position: center; -fx-background-repeat: no-repeat;"
                  AnchorPane.bottomAnchor="30.0"
                  AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0" />



        <TextField fx:id="userInput" layoutY="420.0" prefHeight="30.0" prefWidth="549.0" promptText="Type your message here..."
                   style="-fx-background-color: white ; -fx-border-color: #ccc; -fx-border-radius: 5;"
                   AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" />
        <Button fx:id="sendButton" layoutX="510.0" layoutY="420.0" mnemonicParsing="false" onAction="#handleSendMessage"
                style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"
                text="Send" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0" />
    </children>
</AnchorPane>
