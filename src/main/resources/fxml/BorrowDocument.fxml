<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="670.0" prefWidth="980.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BorrowDocumentController">
    <children>

        <ScrollPane fx:id="searchSuggestionsPane" hbarPolicy="NEVER" layoutX="30" layoutY="100" prefHeight="171.0" prefWidth="300" visible="false">
            <content>
                <ListView fx:id="searchSuggestions" onMouseClicked="#handleSuggestionClick" />
            </content>
        </ScrollPane>

        <TableView fx:id="tableDocuments" layoutX="20.0" layoutY="82.0" prefHeight="505.0" prefWidth="940.0" styleClass="colored-table">
            <columns>
                <TableColumn fx:id="columnDocumentId" prefWidth="75.0" style="-fx-background-color: transparent;" text="ID" />
                <TableColumn fx:id="columnTitle" prefWidth="251.0" style="-fx-background-color: transparent;" text="Title" />
                <TableColumn fx:id="columnAuthor" prefWidth="199.0" style="-fx-background-color: transparent;" text="Author" />
                <TableColumn fx:id="columnEdition" prefWidth="91.0" style="-fx-background-color: transparent;" text="Edition" />
                <TableColumn fx:id="columnAvailable" prefWidth="139.0" style="-fx-background-color: transparent;" text="Available Copies" />
                <TableColumn fx:id="columnBorrowStatus" prefWidth="165.0" style="-fx-background-color: transparent;" text="Borrow Status" />
            </columns>
        </TableView>

        <Button layoutX="423.0" layoutY="611.0" onAction="#handleBorrowDocument" styleClass="save-button" text="Borrow Document" />
      <HBox layoutX="20.0" layoutY="14.0" prefHeight="50.0" prefWidth="940.0" spacing="20" style="-fx-background-color: #5652AB; -fx-padding: 10; -fx-background-radius: 10;">
         <children>
            <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Borrow Documents" />
      
              <HBox alignment="CENTER" spacing="10">
                  <children>
                      <TextField fx:id="searchField" onKeyReleased="#handleSearchKeyPress" prefWidth="300" promptText="Search by Title, Author, or ID" styleClass="textFiled" />
                  </children>
              </HBox>
         </children>
      </HBox>
    </children>
</AnchorPane>
