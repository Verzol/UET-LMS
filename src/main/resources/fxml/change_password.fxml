    <children>
        <Label alignment="CENTER" layoutX="-11.0" layoutY="-2.0" prefHeight="57.0" prefWidth="515.0" style="-fx-background-color: #5652AB;" styleClass="header-label" text="Change Password" textFill="WHITE">
            <font>
                <Font name="Segoe UI Bold" size="22" />
            </font>
        </Label>
        <Label fx:id="usernameLabel" layoutX="224.0" layoutY="66.0" styleClass="username-label" text="User123">
         <font>
            <Font name="Nunito Bold" size="14.0" />
         </font></Label>
        <PasswordField fx:id="oldPasswordField" layoutX="152.0" layoutY="111.0" prefHeight="35.0" prefWidth="200.0" promptText="Enter old password" style="-fx-border-radius: 10;" stylesheets="@../styles/styles.css" />
        <PasswordField fx:id="newPasswordField" layoutX="152.0" layoutY="173.0" prefHeight="35.0" prefWidth="200.0" promptText="Enter new password" styleClass="password-field" />
        <PasswordField fx:id="confirmPasswordField" layoutX="152.0" layoutY="232.0" prefHeight="35.0" prefWidth="200.0" promptText="Confirm new password" styleClass="password-field" />
        
